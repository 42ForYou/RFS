{
    "name": "@42foryou/rfs",
    "description": "React From Scratch",
    "type": "module",
    "version": "0.0.1",
    "main": "dist/rfs.js",
    "scripts": {
        "prepare": "git config --local commit.template .gitmessage.txt",
        "postinstall": "husky install",
        "format": "prettier --cache --write .",
        "lint": "eslint --cache .",
        "test": "jest",
        "docs": "jsdoc srcs/* -d docs",
        "build": "rollup -c"
    },
    "author": "42foryou",
    "keywords": [
        "react"
    ],
    "exports": {
        ".": {
            "import": "./dist/rfs.js"
        }
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^8.0.3",
        "jest": "^29.7.0",
        "jest-cli": "^29.7.0",
        "jira-prepare-commit-msg": "^1.7.2",
        "jsdoc": "^4.0.2",
        "lint-staged": "^15.2.0",
        "prettier": "^3.2.5",
        "rollup": "^4.9.6",
        "rollup-plugin-size": "^0.3.1"
    },
    "jira-prepare-commit-msg": {
        "messagePattern": "$J/$M",
        "ignoredBranchesPattern": "^(master|main|dev|develop|development|release)$"
    },
    "lint-staged": {
        "*.js": [
            "eslint --cache ."
        ]
    },
    "dependencies": {
        "lodash": "^4.17.21"
    }
}
